# flask-api-server/kubernetes/rbac.yaml
# api 서버를 클러스터에 배포하기 위한 파일

apiVersion: v1
kind: ServiceAccount
metadata:
  name: job-creator-sa
  namespace: default # app.py가 배포될 네임스페이스와 동일하게 설정

---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: job-creator-role
  namespace: default
rules:
- apiGroups: ["batch"] # Job 리소스가 속한 API 그룹
  resources: ["jobs"]
  verbs: ["create", "get", "list", "watch", "update", "patch", "delete"] # Job 생성, 조회, 삭제 권한
- apiGroups: [""] # Pods, Pods/log 리소스가 속한 Core API 그룹
  resources: ["pods", "pods/log"]
  verbs: ["get", "list", "watch"] # Pod 조회 및 로그 읽기 권한

---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: job-creator-rb
  namespace: default
subjects:
- kind: ServiceAccount
  name: job-creator-sa
  namespace: default
roleRef:
  kind: Role
  name: job-creator-role
  apiGroup: rbac.authorization.k8s.io